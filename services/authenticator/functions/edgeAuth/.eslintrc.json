{
    "extends": "airbnb-base",
    "rules": {
        "no-console": 0,
        "arrow-body-style": [
            "error",
            "always"
        ],
        "indent": [
            "error",
            2
        ],
        "max-len": [
          "error",
          {
            "code": 160,
            "ignoreStrings": true
          }
        ],
        "new-cap": [
            "error",
            {
                "properties": false
            }
        ],
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ],
        "no-plusplus": 0,
        "no-loop-func": 0,
        "linebreak-style": 0,
        "import/no-extraneous-dependencies": 0
    },
    "env": {
        "node": true,
        "jest": true
    }
}